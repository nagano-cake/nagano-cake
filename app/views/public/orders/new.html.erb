<div class="container">

	<h2>注文情報入力</h2>

 	<!-- 支払方法 -->
	<div class="row">
	 <%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>
	   <span>支払方法</span><br>
	   <%= f.radio_button :payment_method, :クレジットカード, checked: "true" %>
	   <%= f.label :クレジットカード %><br>
	   <%= f.radio_button :payment_method, :銀行振込 %>
	   <%= f.label :銀行振込 %>
	</div>

	<!-- お届け先 -->
	<div class="row">
	   <span>お届け先</span>
	</div>

	<!-- 自身の住所 -->
　	<div class="row">
	   <%= f.radio_button :add, 1, checked: true, checked: "checked" %>
	   <%= f.label :ご自身の住所 %><br>
	   <%= @customer.post_code %>
	   <%= @customer.address %>
	   <%= @customer.first_name %>
	   <%= @customer.last_name %>
    </div>

    <!-- 登録済住所 -->
    <div class="row">
	   <%= f.radio_button :add, 2 %>
	   <%= f.label :登録済住所 %>
	   <%= f.collection_select :address, @customer.address %>
	</div>

	<!-- 新しいお届け先 -->
	<div class="row">
	   <%= f.radio_button :add, 3, %>
	   <%= f.label :新しいお届け先 %>
	</div>

	<div class="row">
	  <div class="col-lg-12">
		<%= f.fields_for :new_add do |na| %>
	    <div class="row">
	      <div class="col-lg-4">
	      	<span>郵便番号（ハイフンなし）</span>
	      </div>
	      <div class="col-lg-8">
	      	<%= na.text_field :post_code, class: "form-control" %>
	      </div>
	    </div>

	    <div class="row">
	       <div class="col-lg-4">
	       	 <span>住所</span>
	       </div>
	       <div class="col-lg-8">
	       	 <%= na.text_field :address, class: "form-control" %>
	       </div>
	    </div>

	    <div class="row">
	       <div class="col-lg-4">
	       	 <span>宛名</span>
	       </div>
	       <div class="col-lg-8">
	       	 <%= na.text_field :name, class: "form-control" %>
	       </div>
	    </div>
	    <% end %>
	  </div>
	</div>
	<!-- お届け先ここまで -->

	<div class="row">
		<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
	</div>

	 <% end %>

</div>