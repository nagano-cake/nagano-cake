<div class="container">
    <div class="row">
        <h2>登録情報</h2>
        <%= link_to '編集する', customer_edit_path, class: "btn btn-primary" %>
        <%= link_to 'パスワードを変更する', edit_customer_password_path(@customer), class: "btn btn-primary" %>
    </div>
    <div class="row">
        <table border="1">
            <tr>
                <th>名前</th>
                <td>
                    <%= @customer.last_name %>
                    <%= @customer.first_name %>
                </td>
            </tr>
            <tr>
                <th>カナ</th>
                <td>
                    <%= @customer.last_name_kana %>
                    <%= @customer.first_name_kana %>
                </td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td>
                    <%= @customer.post_code %>
                </td>
            </tr>
            <tr>
                <th>住所</th>
                <td>
                    <%= @customer.address %>
                </td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td>
                    <%= @customer.telephone_number %>
                </td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td>
                    <%= @customer.email %>
                </td>
            </tr>
        </table>
    </div>
    <div class="row">
        <span>配送先</span>
        <%= link_to '一覧を見る', shipping_addresses_path, class: "btn btn-primary" %>
    </div>
    <div class="row">
        <spna>注文履歴</spna>
        <%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %>
    </div>
</div>