<div class="container">

  <div class="row" style="padding-bottom: 10px;">
      <h2 style="border-bottom: solid 5px #000; width: 190px;">登録情報編集</h2>
  </div>

  <div class="row">
    <div class="col-5">
     <%= form_for(@customer, url: customer_path) do |f| %>

       <div class="form-group" style="width: 190px;">
          <%= f.label :名前 %>
          <div style="margin-left: 10px;">
           <p>
            (姓)
            <%= f.text_field :last_name, class: "form-control" %>
           </p>
           <p>
            (名)
           <%= f.text_field :first_name, class: "form-control" %>
           </p>
        </div>
       </div>

       <div class="form-group" style="width: 190px;">
          <%= f.label :フリガナ %>
          <div style="margin-left: 10px;">
           <p>
            (セイ)
            <%= f.text_field :last_name_kana, class: "form-control" %>
           </p>
           <p>
            (メイ)
            <%= f.text_field :first_name_kana, class: "form-control" %>
           </p>
          </div>
       </div>

       <div class="form-group" style="width: 190px;">
          <%= f.label :メールアドレス %>
        <div style="margin-left: 10px;">
          <%= f.email_field :email, class: "form-control" %>
        </div>
       </div>

       <div class="form-group" style="width: 190px;">
          <%= f.label :郵便番号（ハイフンなし） %>
        <div style="margin-left: 10px;">
          <%= f.text_field :post_code, class: "form-control" %>
        </div>
       </div>

       <div class="form-group" style="width: 380px;">
          <%= f.label :住所 %>
        <div style="margin-left: 10px;">
          <%= f.text_field :address, class: "form-control" %>
        </div>
       </div>

       <div class="form-group"  style="width: 190px;">
          <%= f.label :電話番号（ハイフンなし） %>
          <div style="margin-left: 10px;">
          <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
       </div>

       <div class="actions" style="margin-bottom: 10px;">
           <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
           <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
       </div>
     <% end %>
    </div>
  </div>


</div>
