<div class="container">

  <div class="row">
      <h2 class="new-registration">登録情報編集</h2>
  </div>

  <div class="row">
    <div class="col-5">
     <%= form_for(@customer, url: customer_path) do |f| %>

       <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :last_name, class: "form-control" %>
          <%= f.text_field :first_name, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana, class: "form-control" %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :post_code, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :telephone_number, class: "form-control" %>
       </div>

       <div class="actions">
          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
          <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
       </div>
     <% end %>
    </div>
  </div>


</div>
