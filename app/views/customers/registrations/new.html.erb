<div class="container">

  <div class="row">
      <h2 class="new-registration">新規会員登録</h2>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "customers/shared/error_messages", resource: resource %>

       <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :last_name, class: "form-control" %>
          <%= f.text_field :first_name, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana, class: "form-control" %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :post_code, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :telephone_number, class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label :パスワード（6文字以上） %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.label "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
       </div>

       <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
       </div>
     <% end %>
    </div>
  </div>

  <div class="row">
      <h2 class="already-done">既に登録済みの方</h2>
  </div>

  <div class="row">
      <%= link_to 'こちらからログインしてください。', new_customer_session_path(resource_name) %>
  </div>

</div>





