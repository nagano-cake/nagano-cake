<div class="container">
    <h2>配送先登録/一覧</h2><br>
    <%= form_for @address, url:shipping_addresses_path, do |f| %>
    <div class="row">
        <div class="col-xs-1">
            <%= f.label :郵便番号 %>
        </div>
        <div class="col-xs-1">
            <%= f.text_field :post_code %>
        </div>
        <div class="col-xs-1">
            <%= f.label :住所 %>
        </div>
        <div class="col-xs-4">
            <%= f.text_field :shipping_address %>
        </div>
        <div class="col-xs-1">
            <%= f.label :宛名 %>
        </div>
        <div class="col-xs-2">
            <%= f.text_field :name %>
        </div>
        <div class="col-xs-1">
            <%= f.submit "登録する", class:"btn btn-primary" %>
        </div>
        <% end %>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
            <td>
                <%= address.post_code %>
            </td>
            <td>
                <%= address.shipping_address %>
            </td>
            <td>
                <%= address.name %>
            </td>
            <td>
                <!--idが必要  edit_shipping_address_path-->
                <%= link_to "編集する", edit_sipping_address_path(address),method: :get , class: "btn btn-primary" %>
                <%= link_to "削除する", shipping_address_path(address), method: :delete , class: "btn btn-danger" %>
                <!-- pathにid必要 shippping_address_path-->
            </td>
        </tr>
        <% end %>
    </table>
    <div class="col-xs-6 col-xs-offset-4 ">
        <%= paginate @addresses %>
    </div><!-- ページネーション用 コントローラーごと -->
</div>