<div class="container">
    <h2>配送先登録/一覧</h2><br>
    <%= form_for(@shipping_address, url:shipping_addresses_path) do |f| %>
    <div class="row">
        <div class="col-xs-1">
            <p class = "height">
                <%= f.label :郵便番号 %>
            </p>
        </div>
        <div class="col-xs-2">
            <p class = "height">
                <%= f.text_field :post_code %>
            </p>
        </div>
        <div class="col-xs-1">
            <p class = "height">
                <%= f.label :住所 %>
            </p>
        </div>
        <div class="col-xs-2">
            <p class = "height">
                <%= f.text_field :address %>
            </p>
        </div>
        <div class="col-xs-1">
            <p class = "height">
                <%= f.label :宛名 %>
            </p>
        </div>
        <div class="col-xs-2">
            <p class = "height">
                <%= f.text_field :destination %>
            </p>
        </div>
        <div class="col-xs-1">
            <p class="height1">
                <%= f.submit "登録する", class:"btn btn-primary" %>
            </p>
        </div>
        <% end %>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
        <% @shipping_addresses.each do |shipping_address| %>
        <tr>
            <td>
                <%= shipping_address.post_code %>
            </td>
            <td>
                <%= shipping_address.address %>
            </td>
            <td>
                <%= shipping_address.destination %>
            </td>
            <td>
                <!--idが必要  edit_shipping_address_path-->
                <%= link_to "編集する", edit_shipping_address_path(shipping_address),method: :get , class: "btn btn-primary" %>
                <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete , class: "btn btn-danger" %>
                <!-- pathにid必要 shippping_address_path-->
            </td>
        </tr>
        <% end %>
    </table>
    <div class="col-xs-6 col-xs-offset-4 ">
        <%= paginate @shipping_addresses %>
    </div><!-- ページネーション用 コントローラーごと -->
</div>