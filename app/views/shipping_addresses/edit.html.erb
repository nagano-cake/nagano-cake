<div class="container">
    <h2>配送先住所編集</h2><br>
    <%= form_for @address, url:shipping_address_path(@address), method: :patch do |f| %>
    <div class="address">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :post_code %>
    </div><br>
    <div class="address">
        <%= f.label :住所 %><br />
        <%= f.text_field :shipping_address %>
    </div><br>
    <div class="address">
        <%= f.label :宛名 %><br />
        <%= f.text_field :name %>
    </div><br>
    <div class="edit">
        <%= f.submit "編集する", class:"btn btn-primary" %>
    </div>
    <% end %>
</div>