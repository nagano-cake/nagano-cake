<div class="container">
　<div class="row">
  <div class="col-xs-9"> 

<h2>ショッピングカート</h2>

<% if @cart_items.present? %>

<div>
<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete %>
</div>

<table border="1">

  <thead>
    <tr>
      <th>商品名</th>
	  <th>単価（税込）</th>
	  <th>数量</th>
	  <th>小計</th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
  <% sum = 0 %>
  <% @customer.cart_items.each do |cart_item| %>
   <tr>
   <td><%= cart_item.product.name %></td>
   <td><%= price_include_tax(cart_item.product.price) %>円</td>
   <td>
      <%= form_for cart_item do |f| %>
        <div>
          <%= f.select :count,(1..10).to_a %>
          <%= f.submit "変更" %>
        </div>
      <% end %>
    </td>
      <% shoukei = price_include_tax(cart_item.product.price).to_i * cart_item.count %>
    <td>
      <%= shoukei %>円
      <% sum += shoukei %>
    </td>
    <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
   </tr>
  </tbody>

  <% end %>

</table>


<div>
  <div><%= link_to "買い物を続ける", root_path %></div>
  <div>
   <table>
    <th>合計金額</th>
      <td><%= sum.to_i %>円</td>
   </table>
  </div>
</div>


 <% if current_customer.cart_items.present? %>
  <div>
    <%= link_to "情報入力に進む", new_order_path %>
  </div>
 <% end %>

 <% else %>
  <h2>カートに商品はありません</h2>
 <% end %>


  </div>
 </div>
</div>

