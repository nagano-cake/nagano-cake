<div class="container">
    <div class="row">
        <h2>注文履歴一覧</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td class="col-xs-1">
                        <%= order.created_at.strftime('%Y/%m/%d') %>
                    </td>
                    <td class="col-xs-1">
                        <%= order.post_code %><br>
                        <%= order.address %><br>
                        <%= order.name %>
                    </td>
                    <td class="col-xs-1">
                        <% order.order_informations.each do |order_information| %>
                        <%= order_information.product.name %><br>
                        <% end %>
                    </td>
                    <td class="col-xs-1">
                        <%= order.billing %>
                    </td>
                    <td class="col-xs-1">
                        <%= order.status %>
                    </td>
                    <td class="col-xs-1">
                        <%= link_to '表示する', order_path(order), class: "btn bnt-primary" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>