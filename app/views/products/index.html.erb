<% provide(:title, "商品一覧") %>
<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h2 class="product-headline head-line title_h2 text-center">
                商品一覧
                <span>
                    (全
                    <%= @products.total_count %>件中
                    <%= @products.count %>件)
                </span>
            </h2>
            <div class="clearfix product-box">

                <%= render "status", products: @products %>

            </div>
            <div class="page">
                <%= paginate(@products) %>
            </div>
        </div>
    </div>
</div>