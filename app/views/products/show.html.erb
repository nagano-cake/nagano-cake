<% provide(:title, "#{@product.name}") %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
        <%= attachment_image_tag(@product, :image, size: "100x100", fallback: "no_image.jpg" ) %>
    </div>
    <div class="col-xs-6 product-show">
        <div class="product-description">
            <div class="product-name">
                <h2>
                    <%= @product.name %>
                </h2>
            </div>
            <div class="field">
                <%= @product.text %>
            </div>
            <div class="field product-price">
                <h3>¥
                    <%= price_include_tax(@product.price) %>
                    <span class="tax">(税込)</span>
                </h3>
            </div>
        </div>
        <div class="field">
          <% if @product.status == false %>
            <% if @product.genre.vaild_flag == true %>
            <%= form_for(@cart_item , url: cart_items_path, method: :post) do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.select :count, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% end %>
            <% end %>
           <% else %>
            <h3>売り切れ中</h3>
          <% end %>
        </div>
    </div>
</div>
    </div>
</div>