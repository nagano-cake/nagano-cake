<div class="container">
	<%= form_for(@product, url:admin_products_path) do |f| %>
	 <div class="row">
	    <div class="col-xs-3 col-xs-offset-1">
	    	<h2>商品新規登録</h2>
	    	<%= f.label "商品画像" %>
        	<%= f.attachment_field :image %>
	    </div>
	    <div class="col-xs-3 col-xs-offset-1">
	    	<table class = table >
				<tr>
			        <th><%= "商品名" %></th>
			        <td><%= f.text_field :name %></td>
			    </tr>
			    <tr>
			        <th><%= "商品説明" %></th>
			        <td><%= f.text_area :text %></td>
			    </tr>
			    <tr>
			    	<th><%= "ジャンル" %></th>
			        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
			    </tr>
			    <tr>
			    	<th><%= "税抜価格" %></th>
			        <td><%= f.text_area :price %></td>
			    </tr>
			    <tr>
			    	<th><%= "販売ステータス" %></th>
			        <td><%= f.select :status, [['販売中',true],["販売中止",false]], { include_blank: true } %></td>
			    </tr>
			</table>
		</div>
	</div>
	<div class="row">
	    <div class="col-xs-2 col-xs-offset-10">
	    	<%= f.submit "登録する" %>
	     </div>
	  </div>
	<% end %>
</div>


