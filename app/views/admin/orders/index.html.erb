<div class="container">
	 <div class="row">
	    <div class="col-xs-10 col-xs-offset-1">
	    	<h2>注文履歴一覧</h2>
	    	<table class= "table">
	    		<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @orders.each do |order| %>
						<td><%= order.created_at %></td>
						<td><%= order.name %></td>
						<td><%= order.order_informations.count %></td>
						<td><%= order.status %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
			<%= paginate @orders %>
		</div>
	</div>
</div>
