<div class="container">
	 <div class="row">
	    <div class="col-xs-10 col-xs-offset-1">
	    	<h2>注文詳細画面</h2>
	    	<table class= "table">
	    		<tr>
			        <th class="col-xs-2">購入者</th>
			        <td class="col-xs-10"><% @order.first_name @order.last_name %></td>
			    </tr>
			    <tr>
			    	<th>配送先</th>
			    	<td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
			    </tr>
			    <tr>
			    	<th>支払方法</th>
			    	<td><%= @order.payment_method %></td>
			    </tr>
			    <tr>
			    	<th>注文ステータス</th>
			    	<td>
			    		<%= form_for [:admin, @order] do |f| %>
							<%= f.select :status, Order.statuses.keys.to_a %>
							<%= f.submit '更新' %>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
		<div class="col-xs-6 col-xs-offset-1">
			<table class= "table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>制作ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @order_informations.each do |order_information| %>
						<td><%= order_informations.product.name %></td>
						<td><%= order_informations.price %></td>
						<td><%= order_informations.count %></td>
						<td><%= order_informations.shoukei %></td>
						<%= form_for [:admin, order_informations] do |f| %>
							<td>
								<%= f.select :status, OrderInformations.statuses.keys.to_a %>
							</td>
							<td>
								<%= f.submit "更新" %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-4">
			<table class="table">
					<tbody>
						<tr>
							<th>商品合計</th>
							<td><%= @order_informations.goukei %>円</td>
						</tr>
						<tr>
							<th>送料</th>
							<td><%= @order.postage %>円</td>
						</tr>
						<tr>
							<th>請求金額合計</th>
							<td><%= @order_informations.goukei + @order.postage%>円</td>
						</tr>
					</tbody>
			</table>
		</div>
	</div>
</div>



