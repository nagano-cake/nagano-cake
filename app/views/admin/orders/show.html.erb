<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h2>注文詳細画面</h2>
            <table class="table">
                <tr>
                    <th class="col-xs-2">購入者</th>
                    <td class="col-xs-10">
                        <%= @order.customer.last_name + @order.customer.first_name %>
                    </td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.post_code %>
                        <%= @order.address %>
                        <%= @order.name %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td>
                        <%= @order.payment_method %>
                    </td>
                </tr>
                <tr>
                    <th>注文ステータス</th>
                    <td>
                        <%= form_for @order, url: admin_order_path do |f| %>
                        <%= f.select :status, Order.statuses.keys.to_a %>
                        <%= f.submit '更新' %>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-xs-6 col-xs-offset-1">
            <table class="table">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th>制作ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% sum = 0 %>
                    <% @order_informations.each do |order_information| %>
                     <tr>
                        <td>
                            <%= order_information.product.name %>
                        </td>
                        <td>
                            <%= price_include_tax(order_information.price) %>
                        </td>
                        <td>
                            <%= order_information.count %>
                        </td>
                        <td>
                            <% shoukei = order_information.price * order_information.count * 1.1 %>
                            <%= price_include_tax(order_information.price).to_i * order_information.count %>
                            <% sum += shoukei %>
                        </td>
                        <td>
                        <%= form_for order_information, url: admin_order_information_path do |f| %>
                            <%= f.select :status, OrderInformation.statuses.keys.to_a  %>
                            <%= f.submit "更新" %>
                        <% end %>
                        </td>
                     </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-xs-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th>商品合計</th>
                        <td>
                            <%= sum.to_i %>円</td>
                    </tr>
                    <tr>
                        <th>送料</th>
                        <td>
                            <%= @order.postage %>円</td>
                    </tr>
                    <tr>
                        <th>請求金額合計</th>
                        <td>
                            <%= sum.to_i + @order.postage.to_i %>円</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>