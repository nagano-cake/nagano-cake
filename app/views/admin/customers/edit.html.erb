<div class="container">
	 <div class="row">
	    <div class="col-xs-4 col-xs-offset-2">
	    	<h2>会員編集画面</h2>
	    </div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-2">
			<table class = table >
				<tr>
			        <th class="col-xs-2"><%= f.label "会員ID" %></th>
			        <td class="col-xs-10"><%= @customer.id %></td>
			    </tr>
			    <tr>
			        <th><%= f.label "氏名" %></th>
			        <td>
					    <%= f.text_field :last_name %>
					    <%= f.text_field :first_name %>
				    </td>
			    </tr>
			    <tr>
			        <th><%= f.label "フリガナ" %></th>
			        <td>
				        <%= f.text_field :last_name_kana %>
				        <%= f.text_field :first_name_kana %>
			        </td>
			    </tr>
			        <th><%= f.label "郵便番号" %></th>
			        <td><%= f.text_field :postal_code %></td>
			    </tr>
			    <tr>
			        <th><%= f.label "住所" %></th>
			        <td><%= f.text_field :address %></td>
			    </tr>
			    <tr>
			        <th><%= f.label "電話番号" %></th>
			        <td><%= f.text_field :phone_number %></td>
			    </tr>
			    <tr>
			        <th><%= f.label "メールアドレス" %></th>
			        <td><%= f.text_field :email %></td>
			    </tr>
			    <tr>
			    	<th><%= f.label "会員ステータス" %></th>
			    	<td>
			    		<%= f.label :delete_flag, "有効" %>
 						<%= f.check_box :delete_flag, checked: false%>
 						<%= f.label :delete_flag, "退会済み" %>
 						<%= f.check_box :delete_flag, checked: true%>
                    </td>
			    </tr>
			    <div class="actions">
                    <%= f.submit "変更を保存する" %>
                </div>
			</table>
		</div>
	</div>
</div>