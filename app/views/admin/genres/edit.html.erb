<div class="container">
	 <div class="row">
	    <div class="col-xs-7 col-xs-offset-1">
	    	<h2>ジャンル編集画面</h2>
	    	<%= form_for(@genre, url:admin_genre_path) do |f| %>
			    <%= f.label "ジャンル" %>
			    <%= f.text_field :name %>
			    <%= f.radio_button :vaild_flag, :有効, :checked => (@genre.vaild_flag == "有効") %>
 				<%= f.label :vaild_flag, "有効" %>
 				<%= f.radio_button :vaild_flag, :無効, :checked => (@genre.vaild_flag == "無効") %>
				<%= f.label :vaild_flag, "無効" %>
			    <%= f.submit "更新する", class:"btn btn-info btn-md" %>
			<% end %>
		</div>
	</div>
</div>