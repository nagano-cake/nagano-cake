<div class="container">
	 <div class="row">
	    <div class="col-xs-7 col-xs-offset-1">
	    	<h2>ジャンル一覧,追加</h2>
	    	<%= form_for(@genre, url:admin_genres_path) do |f| %>
			    <%= f.label "ジャンル" %>
			    <%= f.text_field :name %>
 				<%= f.radio_button :vaild_flag, :true %>
		        <%= f.label :vaild_flag, "有効" %>
		        <%= f.radio_button :vaild_flag, :false %>
		        <%= f.label :vaild_flag, "無効" %>
			    <%= f.submit '追加', class:"btn btn-info btn-md" %>
			    </div>
			<% end %>
		</div>
		<div class="col-xs-10 col-xs-offset-1">
	    	<table class= "table">
	    		<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td>
							<% if genre.vaild_flag == true %>
			                  有効
			                <% else %>
			                  無効
			                <% end %>
						</td>
						<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary btn-sm" %>
						</td>
						<% end %>
					</tr>
				</tbody>
			</table>
			<%= paginate @genres %>
		</div>
	</div>
</div>